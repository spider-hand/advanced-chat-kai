{
  "name": "advanced-chat-kai",
  "version": "0.1.0",
  "description": "A highly customizable chat web component",
  "main": "dist/advanced-chat-kai.cjs.js",
  "module": "dist/advanced-chat-kai.es.js",
  "type": "module",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/advanced-chat-kai.es.js",
      "require": "./dist/advanced-chat-kai.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --fix",
    "lint:style": "stylelint \"**/*.ts\" --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "directory": "https://github.com/spider-hand/advanced-chat-kai.git"
  },
  "keywords": [
    "chat",
    "chatbot",
    "web-component",
    "webcomponent",
    "lit"
  ],
  "author": "Akinori Hoshina <creative.spider.hand@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spider-hand/advanced-chat-kai/issues"
  },
  "homepage": "https://github.com/spider-hand/advanced-chat-kai#readme",
  "devDependencies": {
    "@blockquote/rollup-plugin-externalize-source-dependencies": "^1.0.0",
    "@chromatic-com/storybook": "^3.2.6",
    "@lit/context": "^1.1.5",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/web-components": "^8.6.12",
    "@storybook/web-components-vite": "^8.6.12",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "emoji-picker-element": "^1.26.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "lit": "^3.3.0",
    "micromark": "^4.0.2",
    "playwright": "^1.52.0",
    "postcss-lit": "^1.2.0",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^5.14.0",
    "storybook": "^8.6.12",
    "stylelint": "^16.19.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.ts": "stylelint --fix"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
